{
    "name": "${localWorkspaceFolderBasename}",
    "context": "./",
    "folders": [{"path": "./"}],
    "dockerComposeFile": "docker/docker-compose.yml",
    "service": "${localWorkspaceFolderBasename}",
    "workspaceFolder": "/root/${localWorkspaceFolderBasename}",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.languageServer": "Pylance",
        "python.linting.enabled": true,
        "python.linting.flake8Args": ["--config=docker/flake8.ini"],
        "python.linting.flake8Enabled": true,
        "python.linting.flake8Path": "/usr/local/bin/flake8",
        "python.linting.mypyArgs": ["--config-file=docker/mypy.ini"],
        "python.linting.mypyEnabled": true,
        "python.linting.mypyPath": "/usr/local/bin/mypy",
        "python.linting.pycodestylePath": "/usr/local/bin/pycodestyle",
        "python.linting.pylintEnabled": false,
        "python.pythonPath": "/usr/bin/python3.7",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": true,
        "files.exclude": {
            "**/.classpath": true,
            "**/.coverage": true,
            "**/.DS_Store": true,
            "**/.factorypath": true,
            "**/.git": true,
            "**/.hg": true,
            "**/.ipynb_checkpoints": true,
            "**/.mypy_cache": true,
            "**/.project": true,
            "**/.pytest_cache": true,
            "**/.settings": true,
            "**/.svn": true,
            "**/CVS": true,
            "*/*/**/node_modules": true
        }
    },
    "extensions": [
        "ms-python.python",
        "arturock.gitstash",
        "bibhasdn.unique-lines",
        "christian-kohler.path-intellisense",
        "compulim.indent4to2",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "euskadi31.json-pretty-printer",
        "fabiospampinato.vscode-diff",
        "gruntfuggly.todo-tree",
        "konstantin.wrapselection",
        "magicstack.magicpython",
        "ms-azuretools.vscode-docker",
        "ms-python.anaconda-extension-pack",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.sublime-keybindings",
        "ohmnivore.twospacefourspace",
        "shd101wyy.markdown-preview-enhanced",
        "the-new-flesh.henanigans",
        "tht13.rst-vscode",
        "tombonnike.vscode-status-bar-format-toggle",
        "uctakeoff.vscode-counter",
        "visualstudioexptteam.vscodeintellicode",
        "yzhang.markdown-all-in-one"
    ]
}